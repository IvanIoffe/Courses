<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Login.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Login.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">30dp</item>
    </style>

    <style name="Login.ImageView.IconMedium" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:scaleType">centerInside</item>

    </style>

</resources>